{
  "name": "@destiny-definitions/scripts",
  "version": "0.0.1",
  "type": "module",
  "license": "AGPL",
  "scripts": {
    "_dev": "nodemon --watch src -e ts --exec \"pnpm dev:build-run\"",
    "dev:build-run": "pnpm bundle && pnpm dev:start",
    "bundle": "esbuild src/testPages.ts --bundle --outfile=dist/testPages.cjs --platform=node --target=node18.12 --external:@mapbox/node-pre-gyp --external:aws-sdk --external:dotenv",
    "clean": "rm -rf dist",
    "build": "pnpm clean && pnpm bundle",
    "dev:start": "node ./dist/testPages.cjs"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "dependencies": {
    "@destiny-definitions/common": "workspace:*",
    "esbuild": "^0.15.14",
    "dotenv": "^16.0.2"
  },
  "devDependencies": {
    "@types/node": "18.11.9"
  }
}
